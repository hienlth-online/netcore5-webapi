{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.;Initial Catalog=ASP5WebAPI_Book;Integrated Security=True;Pooling=False",
          "tableName": "Logs"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnectionString": "Server=.; Database=ASP5WebAPI_Book; Integrated Security=True;"
  },
  "AllowedHosts": "*"
}
